{
  "name": "yup-hypothesis",
  "version": "1.2.0",
  "description": "Create random data from a Yup schema.",
  "main": "./lib/cjs/main.js",
  "module": "./lib/cjs/main.js",
  "types": "./lib/cjs/main.d.ts",
  "files": [
    "lib/"
  ],
  "scripts": {
    "lint": "eslint",
    "build": "npx tsc -p tsconfig-cjs.json",
    "test": "jest -i",
    "coverage": "jest -i --coverage",
    "prepublishOnly": "npm run build",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hiigami/yup-hypothesis.git"
  },
  "author": "@hiigami",
  "license": "MIT",
  "keywords": [
    "data",
    "fixtures",
    "generator",
    "hypothesis",
    "mocks",
    "test",
    "yup"
  ],
  "bugs": {
    "url": "https://github.com/hiigami/yup-hypothesis/issues"
  },
  "homepage": "https://github.com/hiigami/yup-hypothesis#readme",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/hiigami"
  },
  "peerDependencies": {
    "yup": "^1.1.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.2.1",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "mrm": "^4.1.14",
    "np": "^7.7.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es2022": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 13,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "ignorePatterns": [
      "**/lib/*.{js,ts}",
      "**/README.md"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "importOrder": [
      "jest.*",
      "../src/random",
      "<THIRD_PARTY_MODULES>",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "npm run lint"
    ]
  }
}
