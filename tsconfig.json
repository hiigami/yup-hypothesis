{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "declaration": true,
    "outDir": "./lib/esm",
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
